{
  "openapi": "3.0.1",
  "info": {
    "title": "OceanView Resort API",
    "version": "1.0.0",
    "description": "API for OceanView Resort Reservation System"
  },

  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "Local OceanView Resort API"
    }
  ],
  "paths": {
    "/api/login": {
      "post": {
        "summary": "Login user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": { "type": "string" },
                  "password": { "type": "string" },
                  "role": {
                    "type": "string",
                    "description": "Optional: guest or staff"
                  }
                },
                "required": ["username", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "username": { "type": "string" },
                    "password": { "type": "string" },
                    "role": { "type": "string" }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Invalid credentials",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": { "message": { "type": "string" } }
                }
              }
            }
          }
        }
      }
    },
    "/api/users": {
      "get": {
        "summary": "List all users",
        "responses": {
          "200": {
            "description": "List of users",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "user_id": { "type": "integer" },
                      "username": { "type": "string" },
                      "role": { "type": "string" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/users/add": {
      "post": {
        "summary": "Add new user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": { "type": "string" },
                  "password": { "type": "string" },
                  "role": { "type": "string" }
                },
                "required": ["username", "password", "role"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "User added successfully" }
        }
      }
    },
    "/api/users/update": {
      "put": {
        "summary": "Update user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "user_id": { "type": "integer" },
                  "username": { "type": "string" },
                  "password": { "type": "string" },
                  "role": { "type": "string" }
                },
                "required": ["user_id", "username", "password", "role"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "User updated successfully" }
        }
      }
    },
    "/api/users/delete": {
      "delete": {
        "summary": "Delete user",
        "parameters": [
          {
            "name": "user_id",
            "in": "query",
            "required": true,
            "schema": { "type": "integer" },
            "description": "ID of the user to delete"
          }
        ],
        "responses": {
          "200": { "description": "User deleted successfully" },
          "400": { "description": "Missing or invalid user_id" },
          "500": { "description": "Server error" }
        }
      }
    },
    "/api/rooms": {
      "get": {
        "summary": "Get all rooms",
        "responses": {
          "200": {
            "description": "List of rooms",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "room_id": { "type": "integer" },
                      "room_type": { "type": "string" },
                      "price": { "type": "number", "format": "double" },
                      "status": { "type": "string" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/reservation": {
      "post": {
        "summary": "Create a reservation",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "guest_name": { "type": "string" },
                  "guest_address": { "type": "string" },
                  "contact_number": { "type": "string" },
                  "room_type": { "type": "string" },
                  "check_in": { "type": "string", "format": "date" },
                  "check_out": { "type": "string", "format": "date" }
                },
                "required": [
                  "guest_name",
                  "guest_address",
                  "contact_number",
                  "room_type",
                  "check_in",
                  "check_out"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Reservation created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": { "message": { "type": "string" } }
                }
              }
            }
          }
        }
      },
      "get": {
        "summary": "Get all reservations",
        "responses": {
          "200": {
            "description": "List of reservations",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "reservation_id": { "type": "integer" },
                      "guest_name": { "type": "string" },
                      "guest_address": { "type": "string" },
                      "contact_number": { "type": "string" },
                      "room_type": { "type": "string" },
                      "check_in": { "type": "string", "format": "date" },
                      "check_out": { "type": "string", "format": "date" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/bill": {
      "post": {
        "summary": "Create a bill",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "reservation_id": { "type": "integer" },
                  "total_price": { "type": "number", "format": "double" }
                },
                "required": ["reservation_id", "total_price"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Bill created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": { "message": { "type": "string" } }
                }
              }
            }
          }
        }
      },
      "get": {
        "summary": "Get all bills",
        "responses": {
          "200": {
            "description": "List of bills",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "bill_id": { "type": "integer" },
                      "reservation_id": { "type": "integer" },
                      "total_price": { "type": "number", "format": "double" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/report": {
      "get": {
        "summary": "Get report of reservations and bills",
        "responses": {
          "200": {
            "description": "Report data",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "total_reservations": { "type": "integer" },
                    "total_income": { "type": "number", "format": "double" }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
